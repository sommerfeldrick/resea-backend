# ============================================================
# Server Configuration
# ============================================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ============================================================
# SmileAI Integration
# ============================================================
MAIN_DOMAIN_API=https://smileai.com.br
SMILEAI_API_URL=https://smileai.com.br/api
SMILEAI_API_KEY=your_smileai_api_key_here
SMILEAI_CLIENT_ID=your_client_id_here
SMILEAI_CLIENT_SECRET=your_client_secret_here

# ============================================================
# Redis Configuration (Para cache e créditos)
# ============================================================
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ============================================================
# AI Providers (Configure pelo menos um)
# ============================================================

# GROQ (Recomendado - Rápido e barato)
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini (Grátis até limite generoso)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Mais caro, fallback final)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama (Local, totalmente grátis - Opcional)
OLLAMA_URL=http://localhost:11434

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# File Upload
# ============================================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# ============================================================
# Research Settings
# ============================================================
ENABLE_WEB_SCRAPING=true
MAX_SCRAPING_SOURCES=10
SCRAPING_TIMEOUT=10000

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
